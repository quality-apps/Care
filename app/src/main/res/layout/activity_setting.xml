    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1">

        <include layout="@layout/snippet_top_settings_toolbar"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relLayout2"
        android:layout_below="@id/relLayout1">

        <include layout="@xml/preference"/>

    </RelativeLayout>

    <include layout="@layout/layout_bottom_ad_bar"/>


</RelativeLayout>
